<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RegisterGymActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Nombre del gimnasio -->
            <EditText
                android:id="@+id/gymNameEdt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edittext_fondo"
                android:hint="Nombre del Gimnasio"
                android:inputType="text"
                android:textAlignment="center"
                android:textColorHint="@color/blue_gray"
                android:textSize="16sp" />

            <!-- Ubicación del gimnasio -->
            <EditText
                android:id="@+id/gymLocationEdt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edittext_fondo"
                android:hint="Ubicación del Gimnasio"
                android:inputType="text"
                android:textAlignment="center"
                android:textColorHint="@color/blue_gray"
                android:textSize="16sp" />

            <!-- Precio mensual -->
            <EditText
                android:id="@+id/monthlyPriceEdt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edittext_fondo"
                android:hint="Precio Mensual"
                android:inputType="number"
                android:textAlignment="center"
                android:textColorHint="@color/blue_gray"
                android:textSize="16sp" />

            <!-- Precio por día -->
            <EditText
                android:id="@+id/dailyPriceEdt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edittext_fondo"
                android:hint="Precio por Día (Opcional)"
                android:inputType="number"
                android:textAlignment="center"
                android:textColorHint="@color/blue_gray"
                android:textSize="16sp" />

            <!-- Horario del gimnasio -->
            <EditText
                android:id="@+id/workingHoursEdt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edittext_fondo"
                android:hint="Horario de Atención"
                android:inputType="text"
                android:textAlignment="center"
                android:textColorHint="@color/blue_gray"
                android:textSize="16sp" />

            <!-- Máquinas disponibles -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Selecciona las Máquinas Disponibles"
                android:textAlignment="center"
                android:textColor="@color/blue_gray"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkBoxCardio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sala de Cardio" />

                <CheckBox
                    android:id="@+id/checkBoxMusculacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sala de Musculación" />

                <CheckBox
                    android:id="@+id/checkBoxPesasLibres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sala de Pesas Libres" />

                <CheckBox
                    android:id="@+id/checkBoxSauna"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sala de Sauna" />

                <CheckBox
                    android:id="@+id/checkBoxNatacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sala de Natación" />
            </LinearLayout>

            <!-- Subir Imagen de Perfil -->
            <Button
                android:id="@+id/uploadImageButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/red_button_fondo"
                android:text="Subir Imagen de Perfil"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/gymProfileImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:src="@drawable/subirfoto" />

            <!-- Botón para Registrar el Gimnasio -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/registerGymBtn"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="32dp"
                android:background="@drawable/red_button_fondo"
                android:text="Registrar Gimnasio"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
